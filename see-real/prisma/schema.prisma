generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  email          String    @unique
  avatar_url     String?
  hashed_password String?
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
  skills         String[]
  last_posted DateTime @default(now())
}

model Post {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  body String
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
}

model Reply {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  user_id String
  post_id String
  body String
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
}

model Problem {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  post_id String
  user_id String
  keywords String[]
  is_solved Boolean @default(false)
  created_at      DateTime  @default(now())
  updated_at      DateTime  @updatedAt
}